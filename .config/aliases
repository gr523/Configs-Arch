# pdf #
alias cpdf="gs -q -sDEVICE=pdfwrite -sOUTPUTFILE=out.pdf"
alias opdf="gs -q -sDEVICE=pdfwrite -dCompatibilityLevel=1.4 -dDetectDuplicateImages -dCompressFonts=true -r150 -o output.pdf"
alias spdf="gs -q -sDEVICE=pdfwrite -dFirstPage=1 -dLastPage=1 -o output.pdf"
